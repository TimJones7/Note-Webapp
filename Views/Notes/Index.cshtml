@model IEnumerable<MyFirstWebApp.Models.Note>
@{
    ViewData["Title"] = "Index";
}


<br/>
<div class="container col-12 shadow-lg">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">
                <h2 class="text-uppercase">
                    <i class="bi bi-folder2-open"></i> Open Issues
                </h2>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">
                <h2>
                    <i class="bi bi-check2-square"></i> Closed Issues
                </h2>
            </button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div>
                <div class="container border shadow-lg pt-2 mt-2">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-secondary">
                                <th>
                                    @Html.DisplayNameFor(model => model.NoteTitle)
                                </th>

                                <th>

                                </th>
                                <th>
                                    Created By
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Priority)
                                </th>

                                <th>
                                    Last Edited
                                </th>

                                <th>
                                    <a asp-controller="Notes" asp-action="Create" class="btn btn-success shadow-lg" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Create A New Note">
                                        <i class="bi bi-plus-lg"></i> &nbsp; Add
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            
                            @foreach (var item in Model.Where(j => j.Resolved == false))
                            {
                                <tr>
                                    <th>
                                        <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.NoteBody">@Html.DisplayFor(modelItem => item.NoteTitle)</a>
                                    <th />
                                    <th>
                                        @Html.DisplayFor(modelItem => item.User)
                                    </th>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.Priority)
                                    </th>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.TimeCreated)
                                    </th>
                                    <th>
                                        <div class="btn-group shadow">
                                            <a class="btn btn-outline-info " asp-controller="Notes" asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit Issue">
                                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                                            </a>

                                            <a class="btn btn-outline-secondary " asp-controller="Notes" asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="DELETE ISSUE!">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                            <div />
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                   
                </div>
                <br/>
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div>
               
                <div class="container border shadow-lg pt-2 mt-2">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-secondary">
                                <th>
                                    @Html.DisplayNameFor(model => model.NoteTitle)
                                </th>

                                <th>

                                </th>
                                <th>
                                    Created By
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Priority)
                                </th>

                                <th>
                                    Last Edited
                                </th>

                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(j => j.Resolved == true))
                            {
                                <tr>
                                    <th>
                                        <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@item.NoteBody">@Html.DisplayFor(modelItem => item.NoteTitle)</a>
                                    <th />
                                    <th>
                                        @Html.DisplayFor(modelItem => item.User)
                                    </th>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.Priority)
                                    </th>

                                    <th>
                                        @Html.DisplayFor(modelItem => item.TimeCreated)
                                    </th>
                                    <th>
                                        <div class="btn-group shadow">
                                            <a class="btn btn-outline-info " asp-controller="Notes" asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit Issue">
                                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                                            </a>

                                            <a class="btn btn-outline-secondary " asp-controller="Notes" asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="bottom" title="DELETE ISSUE!">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                            <div />
                                    </th>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <br/>
            </div>
        </div>
    </div>
</div>
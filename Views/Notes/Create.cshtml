@model MyFirstWebApp.Models.Note

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoteTitle" class="control-label"></label>
                <input asp-for="NoteTitle" class="form-control" required />
                <span asp-validation-for="NoteTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NoteBody" for="exampleTextarea" class="form-label mt-4"></label>
                <textarea asp-for="NoteBody" class="form-control" id="exampleTextarea" rows="3" required></textarea>
                <span asp-validation-for="NoteBody" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<PriorityLevel>()">
                    <option>Select Priority Level</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>



            <input type="hidden" value="@User.Identity.Name" asp-for="User" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
